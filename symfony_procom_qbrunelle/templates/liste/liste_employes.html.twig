{% for employe in employes %}
    <tr>
        <td>
            {% if employe.archivage == 0 %}
                {{ employe.prenom | capitalize ~ ' ' ~ employe.nom | upper }}
            {% else %}
                <span class="barre">{{ employe.prenom | capitalize ~ ' ' ~ employe.nom | upper }}</span>
            {% endif %}
        </td>
        <td>{{ employe.email }}</td>
        <td>{{ employe.metier.nom }}</td>
        <td>{{ employe.coutJournalier ~ 'â‚¬'}}</td>
        <td>{{ employe.dateEmbauche | localizeddate('none', 'none', null, null, 'MMMM Y') | capitalize }}</td>
        <td>
            <a href="{{ path('details_employe',{'id': employe.id}) }}" class="btn btn-primary btn-sm">
                <i class="fa fa-eye mr-0"></i>
            </a>
            {% if employe.archivage == 0 %}
                <a href="{{ path('formulaire_modification_employe',{'id': employe.id}) }}" class="btn btn-info btn-sm">
                    <i class="fa fa-pencil mr-0"></i>
                </a>
                <a href="{{ path('liste_suppression_employe',{'id': employe.id}) }}" class="btn btn-danger btn-sm">
                    <i class="fa fa-trash-o mr-0"></i>
                </a>
            {% else %}
                <a href="{{ path('liste_employes',{'offset': 0, 'erreur': true }) }}" class="btn btn-secondary btn-sm">
                    <i class="fa fa-pencil mr-0"></i>
                </a>

                <a href="{{ path('liste_employes',{'offset': 0, 'erreur': true }) }}" class="btn btn-secondary btn-sm">
                    <i class="fa fa-trash-o mr-0"></i>
                </a>
            {% endif %}
        </td>
    </tr>
{% endfor %}