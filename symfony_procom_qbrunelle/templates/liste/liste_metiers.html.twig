{% for metier in metiers %}
    <tr>
        <td>{{ metier.nom | capitalize }}</td>
        <td>
            <a href="{{ path('formulaire_modification_metier',{'id': metier.id}) }}" class="btn btn-info btn-sm">
                <i class="fa fa-pencil mr-0"></i>
            </a>
            <a href="{{ path('liste_suppression_metier',{'id': metier.id}) }}" class="btn btn-danger btn-sm">
                <i class="fa fa-trash-o mr-0"></i>
            </a>
        </td>
    </tr>
{% endfor %}