{% extends 'layout.html.twig' %}

{% block title %}Edition d'un employé - PROCOM{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Edition d'un employé</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Employés</a>
                </li>
                <li class="breadcrumb-item">Edition d'un employé</li>
            </ul>
        </div>
        <div class="tile">
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">×</button><strong>Well done!</strong> Message flash.
            </div>

            {{ form_start(form) }}

                <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="alert alert-info">
                                <div class="row">
                                    <div class="col-sm-2 text-center">
                                        <i class="fa fa-info-circle"></i>
                                    </div>
                                    <div class="col-sm-10">
                                        <p>Vous pouvez, par exemple, ajouter des informations pour cette section de cette manière.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group row">
                                <label class="control-label col-md-3">Prénom</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.prenom) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Nom</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.nom) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Email</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    <!--<div class="form-control-feedback text-danger">Un message d'erreur</div>-->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <section>
                    <h3>Production</h3>
                    <div class="row mt-4">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            <div class="form-group row">
                                <label for="select-job" class="control-label col-md-3">Métier</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.metier) }}
                                    {{ form_widget(form.metier, {'attr': {'class': 'form-control', 'id': 'select-job' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Coût journalier (en €)</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.coutJournalier) }}
                                    {{ form_widget(form.coutJournalier, {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Date d'embauche</label>
                                <div class="col-md-9">
                                    {{ form_errors(form.dateEmbauche) }}
                                    {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}