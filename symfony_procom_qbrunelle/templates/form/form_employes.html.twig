{% for message in app.session.flashBag.get('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}

{{ form_start(form) }}

<section>
    <h3>Informations générales</h3>
    <div class="row mt-4">
        <div class="col-md-4"></div>
        <div class="col-md-8">
            <div class="form-group row">
                <label class="control-label col-md-3">Prénom</label>
                <div class="col-md-9">
                    {{ form_errors(form.prenom) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Nom</label>
                <div class="col-md-9">
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Email</label>
                <div class="col-md-9">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <!--<div class="form-control-feedback text-danger">Un message d'erreur</div>-->
                </div>
            </div>
        </div>
    </div>
</section>
<hr/>
<section>
    <h3>Production</h3>
    <div class="row mt-4">
        <div class="col-md-4"></div>
        <div class="col-md-8">
            <div class="form-group row">
                <label for="select-job" class="control-label col-md-3">Métier</label>
                <div class="col-md-9">
                    {{ form_errors(form.metier) }}
                    {{ form_widget(form.metier, {'attr': {'class': 'form-control', 'id': 'select-job' }}) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Coût journalier (en €)</label>
                <div class="col-md-9">
                    {{ form_errors(form.coutJournalier) }}
                    {{ form_widget(form.coutJournalier, {'type': 'float','attr': {'class': 'form-control' , 'min': 0, 'step': 0.01}}) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">Date d'embauche</label>
                <div class="col-md-9">
                    {{ form_errors(form.dateEmbauche) }}
                    {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control' }}) }}
                </div>
            </div>
        </div>
    </div>
</section>
<hr/>
<div class="row">
    <div class="offset-md-6 col-md-6">
        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
    </div>
</div>
{{ form_end(form) }}